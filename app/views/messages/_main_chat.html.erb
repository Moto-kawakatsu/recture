<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      <%= @room.name %>
      <%=link_to "みんなの疑問",agrees_path, class:"our-questions" %>
      <%=link_to "クイズ",questions_index_path, class:"our-questions" %>
      <%=link_to "勉強時間",tips_hours_path, class:"our-questions" %>
      <%=link_to "コメント数",tips_commentnum_path, class:"our-questions" %>
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
    <% if current_user.genre == "教員"%>
    <%=button_to "ルーム削除", room_path(@room), method: :delete %>
    <% end %>
    </div>
  </div>
</div>

<div class="messages">
   <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: @message, class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
      <%= hidden_field_tag :id,@room.id %>
  </div>

  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
