<%if @exams_first_end.present? || @exams_first_end.present?%>

<div class="term">
<%if @exams_first_end.present?%>

  <div class="exam-wrapper">
    <div class="term-name2">期末考査</div>

    <div class="subjects">
    <% @exams_first_end.each do |exam_first_end| %>
        <%if exam_first_end.user == current_user && current_user.grade == 1  && current_user.grade == exam_first_end.grade_num%>
          <div class="exam-content">
          <%if exam_first_end.subject ==1%>
            <div class="subject">国語</div>
          <%elsif exam_first_end.subject ==2%>
            <div class="subject">数学</div>
          <%elsif exam_first_end.subject ==3%>
            <div class="subject">理科</div>
          <%elsif exam_first_end.subject ==4%>
            <div class="subject">社会</div>
          <%elsif exam_first_end.subject ==5%>
            <div class="subject">英語</div>
          <%end%>
            <div class="score">
            <%if exam_first_end.subject ==1%>
              <%=exam_first_end.score%>
                <p>
                  <%=Exam.where(term:"１学期期末").where(subject:1).where(grade_num: 1).pluck(:score).sum / Exam.where(term:"１学期期末").where(subject:1).length %>
                </p>
            <%elsif exam_first_end.subject ==2%>
              <%=exam_first_end.score%>
                <p>
                  <%=Exam.where(term:"１学期期末").where(subject:2).where(grade_num: 1).pluck(:score).sum / Exam.where(term:"１学期期末").where(subject:2).length %>
                </p>
            <%elsif exam_first_end.subject ==3%>
              <%=exam_first_end.score%>
                <p>
                  <%=Exam.where(term:"１学期期末").where(subject:3).where(grade_num: 1).pluck(:score).sum / Exam.where(term:"１学期期末").where(subject:3).length %>
                </p>
            <%elsif exam_first_end.subject ==4%>
              <%=exam_first_end.score%>
                <p>
                  <%=Exam.where(term:"１学期期末").where(subject:4).where(grade_num: 1).pluck(:score).sum / Exam.where(term:"１学期期末").where(subject:4).length %>
                </p>
            <%elsif exam_first_end.subject ==5%>
              <%=exam_first_end.score%>
                <p>
                  <%=Exam.where(term:"１学期期末").where(subject:5).where(grade_num: 1).pluck(:score).sum / Exam.where(term:"１学期期末").where(subject:5).length %>
                </p>
            <%end%>
            </div>
          </div>
        <%end%>
    <%end%>
    </div>
  </div>
<%end%>
<%end%>
